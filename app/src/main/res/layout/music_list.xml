<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="8dp"
    android:paddingTop="12dp"
    tools:context=".SecondaryActivity">


    <ScrollView
        android:id="@+id/container_music_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- seccion de imagen principal del artista -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/img_artist"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/image_2930"
                    tools:ignore="MissingConstraints">
                </ImageView>

                <!-- Boton de Volver al Menu -->

                <FrameLayout
                    android:id="@+id/fl_bottom_arrow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:ignore="MissingConstraints">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_rounded_image"
                        android:contentDescription="volver al menu"
                        android:src="@drawable/arrow_back_24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    </ImageButton>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_title_cancion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo de la canción"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- seccion boton de reproduccion -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

                <LinearLayout
                    android:id="@+id/play_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <FrameLayout
                        android:id="@+id/play_button_layout"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <ImageView
                            android:id="@+id/ic_play_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_circle_button"
                            android:padding="12dp"
                            android:src="@drawable/play_arrow_24dp"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_aleatorio"
                        style="@style/PlayerControlButton"
                        android:src="@drawable/shuffle_24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="Reproducción aleatoria" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="follow"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="200dp">

                    </TextView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 3. Sección: Canciones Populares -->

            <TextView
                android:id="@+id/tv_title_seccion_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Canciones Populares"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp">

            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_popular_song"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/album_art_placeholder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/ly_info_popular_song"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_popular_song"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_title_popular_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I don't miss you"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_title_popular_song_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last of us - Album"
                        android:textColor="@color/bottom_nav_bg"
                        android:textSize="14sp" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Seccion lista seleccionable de canciones-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/img_list1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:padding="2dp"
                        android:src="@drawable/bg_rounded_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_name_song_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name music"
                        android:textColor="@color/white"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_list1"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="16dp">

                    </TextView>

                    <FrameLayout
                        android:id="@+id/ic_moreV_container1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageButton
                            android:id="@+id/iv_more_vertical_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Más opciones"
                            android:padding="4dp"
                            android:src="@drawable/more_vert_24dp"
                            android:visibility="visible"
                            app:tint="@color/white"
                            android:background="@color/black"
                            app:menu="@menu/menu_opciones_music_list"/>

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/img_list2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:padding="2dp"
                        android:src="@drawable/bg_rounded_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_name_song_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name music"
                        android:textColor="@color/white"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_list2"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="16dp">

                    </TextView>

                    <FrameLayout
                        android:id="@+id/ic_moreV_container2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageButton
                            android:id="@+id/iv_more_vertical_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Más opciones"
                            android:padding="4dp"
                            android:src="@drawable/more_vert_24dp"
                            android:visibility="visible"
                            app:tint="@color/white"
                            android:background="@color/black"
                            app:menu="@menu/menu_opciones_music_list"/>

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/img_list3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:padding="2dp"
                        android:src="@drawable/bg_rounded_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_name_song_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name music"
                        android:textColor="@color/white"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_list3"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="16dp">

                    </TextView>

                    <FrameLayout
                        android:id="@+id/ic_moreV_container3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageButton
                            android:id="@+id/iv_more_vertical_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Más opciones"
                            android:padding="4dp"
                            android:src="@drawable/more_vert_24dp"
                            android:visibility="visible"
                            app:tint="@color/white"
                            android:background="@color/black"
                            app:menu="@menu/menu_opciones_music_list"/>

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>