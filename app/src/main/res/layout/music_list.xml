<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="8dp"
    android:paddingTop="12dp"
    tools:context=".SecondaryActivity">

    <ScrollView
        android:id="@+id/container_music_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- seccion de imagen principal del artista -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/img_artist"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/image_2930"
                    android:contentDescription="imagen del artista">

                </ImageView>

                <!-- Boton de Volver al Menu -->

                <FrameLayout
                    android:id="@+id/fl_bottom_arrow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:ignore="MissingConstraints">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_rounded_image"
                        android:contentDescription="volver al menu"
                        android:src="@drawable/arrow_back_24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    </ImageButton>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_title_cancion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo de la canción"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/tv_artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:orientation="vertical"
                    android:text="Nombre del artista"
                    android:textAlignment="center"
                    android:textColor="@color/nav_active"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="4dp">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- seccion boton de reproduccion -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

                <LinearLayout
                    android:id="@+id/play_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <FrameLayout
                        android:id="@+id/play_button_layout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <ImageView
                            android:id="@+id/ic_play_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_circle_button"
                            android:padding="16dp"
                            android:src="@drawable/play_arrow_24dp"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_aleatorio"
                        style="@style/PlayerControlButton"
                        android:src="@drawable/shuffle_24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="Reproducción aleatoria" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="follow"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="200dp">

                    </TextView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 3. Sección: Canciones Populares -->

            <TextView
                android:id="@+id/tv_title_seccion_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Canciones Populares"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cv_container_song_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipToPadding="false"
                android:layout_marginTop="8dp"
                android:paddingTop="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_lista_canciones">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/mini_player_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>