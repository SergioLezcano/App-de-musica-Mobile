<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="5dp"
    android:paddingTop="8dp">

    <!-- LinearLayout apila las secciones de la interfaz verticalmente -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 1. Barra superior (Logo y campana de notificación)
        Usar ContraintLayout permite orientar los elementos mas libremente-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi App de Musica"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/notification_icon_desc"
                android:src="@drawable/notifications_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 2. Sección: Reproducido Recientemente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Reproducido Recientemente"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        Especifica que el RecyclerView debe usar un layout lineal.
        tools:listitem="@layout/item_recently_played" mostrará el diseño de esta seccion-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recently_played"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recently_played" />

        <!-- 3. Sección: Nuevo Lanzamiento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Lanzamiento"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_nuevo_lanzamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_rounded_card"
            android:padding="12dp">

            <!-- Imagen del álbum -->
            <ImageView
                android:id="@+id/iv_new_release_album_art"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/album_art_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Información del track donde se agrupan TextView, ImageView para imagnes, botones
             e iconos-->
            <LinearLayout
                android:id="@+id/track_info_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fl_play_button"
                app:layout_constraintStart_toEndOf="@id/iv_new_release_album_art"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_track_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I don't miss you"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_track_artist_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last of us - Album"
                    android:textColor="@color/bottom_nav_bg"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_favorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/favorite_24d"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Botón de Reproducir
            FrameLayout para contener y ubicar el boton de reproduccion-->
            <FrameLayout
                android:id="@+id/fl_play_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ic_play"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_circle_button"
                    android:padding="8dp"
                    android:src="@drawable/play_arrow_24dp"
                    app:tint="@color/white" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 4. Sección: Tus Artistas Favoritos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Tus Artistas Favoritos"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favorite_artists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_artist_circle"
            android:contentDescription="musica favorita"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>