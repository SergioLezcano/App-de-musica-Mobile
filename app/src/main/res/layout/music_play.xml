<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:paddingBottom="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/iv_chevron_down"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/keyboard_arrow_down_24dp"
                    android:contentDescription="Cerrar vista"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <FrameLayout
                    android:id="@+id/menu_icon_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/iv_more_vertical"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="M치s opciones"
                        android:padding="4dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/more_vert_24dp"
                        android:visibility="visible"
                        app:tint="@color/white" />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/img_play"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_rounded_image"
                    android:src="@drawable/image_2930"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tv_name_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del artista"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/tv_title_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="titulo de la cancion"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="18sp">

                    </TextView>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="00:00">

                </TextView>
                
                <SeekBar
                    android:id="@+id/sk_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:max="100"
                    android:progress="30"
                    app:layout_constraintStart_toEndOf="@id/tv_current_time"
                    app:layout_constraintEnd_toStartOf="@id/tv_total_time"
                    app:layout_constraintTop_toTopOf="@id/tv_current_time"
                    app:layout_constraintBottom_toBottomOf="@id/tv_current_time"
                    tools:progressTint="@color/seekBar"
                    tools:thumbTint="@color/seekBar_circule">

                </SeekBar>

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_current_time"
                    app:layout_constraintBottom_toBottomOf="@id/tv_current_time"
                    tools:text="00:00">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/sk_seek_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/iv_aleatorio"
                        style="@style/PlayerControlButton"
                        android:src="@drawable/shuffle_24dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="Reproducci칩n aleatoria" />

                    <ImageView
                        android:id="@+id/iv_skip_anterior"
                        style="@style/PlayerControlButton"
                        android:src="@drawable/skip_previous"
                        android:contentDescription="Canci칩n anterior"
                        android:layout_marginEnd="14dp"
                        />

                    <FrameLayout
                        android:id="@+id/btn_play_pause"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_circule_image"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp">

                        <ImageView
                            android:id="@+id/iv_play_pause_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/play_arrow_24dp"
                            app:tint="@color/black"
                            android:contentDescription="Reproducir" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_skip_next"
                        style="@style/PlayerControlButton"
                        android:src="@drawable/skip_next_24dp"
                        android:contentDescription="Canci칩n siguiente"
                        android:layout_marginStart="14dp" />

                    <ImageView
                        android:id="@+id/iv_repeat"
                        style="@style/PlayerControlButton"
                        android:src="@drawable/repeat_24dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="Repetir" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>